@page
@using Microsoft.EntityFrameworkCore
@using _2._Sem_Project_Eksamen_System.Models1
@inject _2._Sem_Project_Eksamen_System.Models1.EksamensDBContext Context
@{
    ViewData["Title"] = "Unresolved Exams";

    var unresolvedExams = await Context.Exams
        .Include(e => e.Class)
        .Include(e => e.TeachersToExams)
        .Include(e => e.RoomsToExams)
        .AsNoTracking()
        .Where(e =>
            string.IsNullOrEmpty(e.ExamName) ||
            !e.ExamStartDate.HasValue ||
            !e.ExamEndDate.HasValue ||
            e.ClassId == null ||
            // No Examiner
            !e.TeachersToExams.Any(te => te.Role == "Examiner") ||
            // No Censor (any teacher whose role contains "Censor")
            !e.TeachersToExams.Any(te => te.Role != null && te.Role.Contains("ensor")) ||
            // No Room
            !e.RoomsToExams.Any())
        .OrderBy(e => e.ExamStartDate)
        .ToListAsync();
}

<h2>Unresolved Exams</h2>
<p class="text-muted">Exams with missing information</p>

<div class="mb-3">
    <a asp-page="/Eksamner/GetEksamner" class="btn btn-outline-secondary btn-sm">
        ← Back to all exams
    </a>
</div>

@if (!unresolvedExams.Any())
{
    <div class="alert alert-success">
        ✓ All exams are properly configured!
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Exam</th>
                <th>Issues</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var exam in unresolvedExams)
            {
                var hasExaminer = exam.TeachersToExams.Any(te => te.Role == "Examiner");
                var hasCensor = exam.TeachersToExams.Any(te => te.Role != null && te.Role.Contains("ensor"));
                var hasRoom = exam.RoomsToExams.Any();

                <tr>
                    <td>
                        <strong>@(exam.ExamName ?? "Unnamed")</strong><br />
                        @(exam.Class?.ClassName ?? "No class")
                        @if (exam.ExamStartDate.HasValue)
                        {
                            <span> - @exam.ExamStartDate.Value.ToString("MMM dd")</span>
                        }
                    </td>
                    <td>
                        @* Name *@
                        @if (string.IsNullOrEmpty(exam.ExamName))
                        {
                            <span class="badge bg-danger">No name</span>
                        }

                        @* Dates *@
                        @if (!exam.ExamStartDate.HasValue || !exam.ExamEndDate.HasValue)
                        {
                            <span class="badge bg-danger">No dates</span>
                        }

                        @* Class *@
                        @if (exam.ClassId == null)
                        {
                            <span class="badge bg-danger">No class</span>
                        }

                        @* Examiner *@
                        @if (!hasExaminer)
                        {
                            <span class="badge bg-warning text-dark">No examiner</span>
                        }

                        @* Censor *@
                        @if (!hasCensor)
                        {
                            <span class="badge bg-warning text-dark">No censor</span>
                        }

                        @* Room *@
                        @if (!hasRoom)
                        {
                            <span class="badge bg-warning text-dark">No room</span>
                        }
                    </td>
                    <td>
                        <a asp-page="/Eksamner/Edit_Exam" asp-route-id="@exam.ExamId"
                           class="btn btn-sm btn-primary">Fix</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
