@page
@model _2._Sem_Project_Eksamen_System.Pages.Students.CreateStudentModel
@{
    ViewData["Title"] = "Create Student";
}
<div class="page-body">
    <div class="dashboard-container">
        <div class="welcome-card">
            <h1>Create Student</h1>
            <p>Add a new student to the system</p>
        </div>

        <!-- ///CREATE STUDENT FORM SECTION -->
        <div class="section-card">
            <div class="section-header">
                <h2>Student Information</h2>
                <div class="header-actions">
                    <a asp-page="/Students/GetStudent" class="btn-toggle">Back to Overview</a>
                </div>
            </div>

            <div class="form-container">
                <!--///Display Errors -->
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <form method="post">
                    <!-- ///FORM GRID LAYOUT INCLUDE CARDS -->
                    <div class="form-grid">
                        <!-- ///BASIC INFORMATION COLUMN -->
                        <div class="form-column">
                            <h3 class="form-section-title">Basic Information</h3>

                            <!-- ///Student Name -->
                            <div class="form-group">
                                <label asp-for="Student.StudentName" class="form-label">Full Name *</label>
                                <input asp-for="Student.StudentName"
                                       class="form-control compact-input"
                                       placeholder="Enter student's full name"
                                       pattern="[A-Za-z\s]+"
                                       title="Please enter only letters and spaces"
                                       required />
                                <span asp-validation-for="Student.StudentName" class="text-danger"></span>
                            </div>

                            <!--///Student Email -->
                            <div class="form-group">
                                <label asp-for="Student.Email" class="form-label">Email *</label>
                                <input asp-for="Student.Email" type="email" class="form-control compact-input" placeholder="student@email.com" />
                                <span asp-validation-for="Student.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- ////CLASS ASSIGNMENT COLUMN -->
                        <div class="form-column">
                            <h3 class="form-section-title">Class Assignment *</h3>

                            <!-- ///CLASS Dropdown -->
                            <div class="form-group">
                                <label asp-for="SelectedClassId" class="form-label">Assigned Class</label>
                                <select asp-for="SelectedClassId" asp-items="Model.ClassList" class="form-control compact-input" required>
                                    <option value=""disabled selected>Select a class</option>
                                </select>
                                <span asp-validation-for="SelectedClassId" class="text-danger"></span>
                                <small class="form-help">Select which class the student should be assigned to</small>
                            </div>
                        </div>
                    </div>

                    <!-- ///FORM ACTIONS -->
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <span class="btn-icon">💾</span>
                            Create Student
                        </button>
                        <a asp-page="/Students/GetStudent" class="btn btn-secondary">
                            <span class="btn-icon">↩️</span>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* ==============================================
             SECTION 1: FORM CONTAINER STYLES This style of Commenting may be followed if agreed
        ============================================== */
    .form-container {
        padding: 1.5rem;
    }

    /* ==============================================
             SECTION 2:  FORM GRID LAYOUT
            ============================================== */
    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .form-column {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    /* ==============================================
            SECTION 3:   FORM SECTION TITLES
            ============================================== */
    .form-section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #374151;
        margin: 0 0 1rem 0;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #e5e7eb;
    }

    /* ==============================================
             SECTION 4:  FORM GROUP STYLES
            ============================================== */
    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .form-label {
        font-weight: 600;
        color: #374151;
        font-size: 0.9rem;
        margin-bottom: 0.25rem;
    }

    .form-control {
        height: 36px;
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
        border: 1px solid #d1d5db;
        border-radius: 4px;
        transition: border-color 0.2s ease;
    }

        .form-control:focus {
            border-color: #0066cc;
            box-shadow: 0 0 0 2px rgba(0, 102, 204, 0.1);
        }

    /* ==============================================
              SECTION 5: FORM HELP TEXT
       ============================================== */
    .form-help {
        font-size: 0.8rem;
        color: #6b7280;
        margin-top: 0.25rem;
        line-height: 1.4;
    }

    /* ==============================================
             SECTION 6:  ERROR STYLES
        ============================================== */
    .alert {
        padding: 1rem;
        border-radius: 6px;
        margin-bottom: 1.5rem;
    }

    .alert-danger {
        background-color: #fef2f2;
        border: 1px solid #fecaca;
        color: #dc2626;
    }

    .text-danger {
        font-size: 0.8rem;
        color: #dc2626;
        margin-top: 0.25rem;
    }

    /* ==============================================
              SECTION 7: FORM ACTIONS
            ============================================== */
    .form-actions {
        display: flex;
        gap: 1rem;
        justify-content: flex-start;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e5e7eb;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        text-decoration: none;
        font-size: 0.875rem;
        font-weight: 500;
        border: 1px solid transparent;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-primary {
        background-color: #0066cc;
        color: white;
        border-color: #0066cc;
    }

        .btn-primary:hover {
            background-color: #0052a3;
            border-color: #0052a3;
            transform: translateY(-1px);
        }

    .btn-secondary {
        background-color: #6b7280;
        color: white;
        border-color: #6b7280;
    }

        .btn-secondary:hover {
            background-color: #4b5563;
            border-color: #4b5563;
            transform: translateY(-1px);
        }

    .btn-icon {
        font-size: 0.875rem;
    }

    /* ==============================================
              SECTION 8: HEADER ACTIONS
            ============================================== */
    .header-actions {
        display: flex;
        gap: 1rem;
    }

    .btn-toggle {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        padding: 0.375rem 0.75rem;
        border-radius: 4px;
        text-decoration: none;
        font-size: 0.875rem;
        transition: all 0.2s;
        background-color: #e7f1ff;
        color: #0066cc;
        border: 1px solid #b6d7e8;
    }

        .btn-toggle:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }

    /* ==============================================
              SECTION 9: RESPONSIVE DESIGN
            ============================================== */
    @@media (max-width: 768px) {
        .form-container {
            padding: 1rem;
        }

        .form-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .form-actions {
            flex-direction: column;
        }

        .header-actions {
            justify-content: center;
        }
    }
</style>